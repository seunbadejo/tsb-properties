<h1 class="h3">Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <!-- <th>Integer</th> -->
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= sanitize property.name %></td>
        <td><%= sanitize property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.integer %></td>
        <td><%= property.rooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= link_to 'Show', property_path(uuid: property.uuid) %></td>
        <td><%= link_to 'Edit', edit_property_path(uuid: property.uuid) %></td>
        <td><%= link_to 'Destroy', property_path(uuid: property.uuid), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path, class: "btn btn-success" %>
